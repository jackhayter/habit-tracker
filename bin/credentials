#!/bin/bash

read -p "Development, testing, or production [d/t/p]:" CHOSEN_ENV

if [ "$CHOSEN_ENV" == "" ]; then
  RAILS_ENV="development"
elif [ "$CHOSEN_ENV" == "d" ]; then
  RAILS_ENV="development"
elif [ "$CHOSEN_ENV" == "t" ]; then
  RAILS_ENV="test"
elif [ "$CHOSEN_ENV" == "p" ]; then
  RAILS_ENV="production"
else
  echo "Invalid environment. Quitting."
  exit 1
fi

HAS_CODE=`which code`
if [ "$HAS_CODE" != "" ]; then
  EDITOR="code --wait"
else
  EDITOR="nano"
fi

EDITOR=$EDITOR RAILS_ENV=$RAILS_ENV rails credentials:edit --environment $RAILS_ENV
