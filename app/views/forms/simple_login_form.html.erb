<%= simple_form_for @login_form, method: :post, url: login_path, wrapper: :vertical_form do |f| %>
  <%= f.error_notification %>
  <%= f.input :email_address, required: true, input_html: { autocomplete: 'email' } %>
  <%= f.input :password, required: true, input_html: { autocomplete: 'current-password' } %>
  <%= f.button :submit, 'Log in', class: "btn-primary" %>
<% end %>
